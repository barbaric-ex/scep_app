<%- include('../partials/head') %> <%- include('../partials/navbar') %>

<div class="row my-5">
  <div class="col-6">
    <h1 class="text-center">
      Total payments <span class="badge bg-danger"> <%= sum.total %> KM</span>
    </h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Student</th>
            <th>Course</th>
            <th>Amount</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% payments.forEach(payment => { %>
          <tr>
            <td><%= payment.first_name %></td>
            <td><%= payment.title %></td>
            <td><%= payment.amount %> km</td>
            <td>
              <a
                class="btn btn-primary me-2"
                href="students/show/<%= payment.student_id %>"
                >Profile</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/bottom') %>
